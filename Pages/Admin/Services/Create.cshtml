@page
@model AgendamentoPro.Pages.Admin.Services.CreateModel

<h2>Novo Serviço</h2>

<form method="post">
    <div>
        <label>Nome</label><br />
        <input asp-for="Service.Name" />
    </div>

    <div>
        <label>Preço</label><br />
        <input asp-for="Service.Price" type="number" step="0.01" />
    </div>

    <br />

    <button type="submit">Salvar</button>
    <a asp-page="Index">Cancelar</a>
</form>
